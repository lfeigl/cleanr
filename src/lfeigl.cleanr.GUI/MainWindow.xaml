<Window x:Name="WindowMain" x:Class="lfeigl.cleanr.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lfeigl.cleanr.GUI"
        mc:Ignorable="d"
        Title="cleanr" Height="450" Width="800" ResizeMode="CanMinimize">
    <Grid>
        <TextBox x:Name="TextBoxAppName" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="&lt;application name&gt;" VerticalAlignment="Top" Width="320" FontStyle="Italic"/>
        <Button x:Name="ButtonSearch" Content="Search" HorizontalAlignment="Left" Margin="335,13,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="ButtonClean" Content="Clean" HorizontalAlignment="Left" Margin="335,243,0,0" VerticalAlignment="Top" Width="75"/>
        <DataGrid x:Name="DataGridLocations" HorizontalAlignment="Left" Height="200" Margin="10,38,0,0" VerticalAlignment="Top" Width="400"/>
    </Grid>
</Window>
